#:import KitchenSinkSwiperManagerCard libs.baseclass.manager_swiper_card.KitchenSinkSwiperManagerCard
#:import images_path kivymd.images_path
#:import environ os.environ


<KitchenSinkSwiperManagerCard>
    orientation: 'vertical'
    size_hint_y: None
    height: dp(300)
    pos_hint: {'top': 1}

    FitImage:
        source: f'{environ["KITCHEN_SINK_ASSETS"]}guitar-1139397_1280.png'
        size_hint: None, None
        size: root.width, dp(250)
        pos_hint: {'top': 1}

    MDLabel:
        theme_text_color: 'Custom'
        bold: True
        text_color: app.theme_cls.primary_color
        text: root.text
        size_hint_y: None
        height: dp(60)
        halign: 'center'


<KitchenSinkSwiperManager@Screen>
    name: 'manager swiper'

    BoxLayout:
        orientation: 'vertical'
        spacing:"10dp"

        Toolbar:
            id: toolbar

        BoxLayout:
            id: box
            padding: dp(10)
            orientation: 'vertical'

            MDSwiperManager:
                id: swiper_manager
                paginator: paginator

                Screen:
                    name: 'screen one'
                    KitchenSinkSwiperManagerCard:
                        text: 'Swipe to switch to screen one'.upper()

                Screen:
                    name: 'screen two'
                    KitchenSinkSwiperManagerCard:
                        text: 'Swipe to switch to screen two'.upper()

                Screen:
                    name: 'screen three'
                    KitchenSinkSwiperManagerCard:
                        text: 'Swipe to switch to screen three'.upper()

                Screen:
                    name: 'screen four'
                    KitchenSinkSwiperManagerCard:
                        text: 'Swipe to switch to screen four'.upper()

                Screen:
                    name: 'screen five'
                    KitchenSinkSwiperManagerCard:
                        text: 'Swipe to switch to screen five'.upper()

            MDSwiperPagination:
                id: paginator
                manager: swiper_manager
                screens: swiper_manager.screen_names