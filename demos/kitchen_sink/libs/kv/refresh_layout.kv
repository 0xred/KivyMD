<KitchenSinkRefreshLayout>
    name: 'refresh layout'

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        FloatLayout:

            MDScrollViewRefreshLayout:
                id: refresh_layout
                refresh_callback: root.refresh_callback
                root_layout: root

                GridLayout:
                    id: box
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 1
