<KitchenSinkCards>
    name: "cards"

    Toolbar:
        title: "MDCard"
        pos_hint: {"top": 1}

    MDCard:
        size_hint: None, None
        size: "320", "180"
        pos_hint: {"center_x": .5, "center_y": .7}

    MDCard:
        size_hint: None, None
        size: "320", "180"
        pos_hint: {"center_x": .5, "center_y": .3}

        BoxLayout:
            orientation: "vertical"
            padding: "8dp"

            MDLabel:
                text: "Title"
                theme_text_color: "Secondary"
